# GEOPOLITIX Environment Configuration
# Copy this file to .env and fill in your API keys

# Application Settings
DEBUG=True
PORT=8050
HOST=0.0.0.0

# API Keys
NEWSAPI_KEY=your_newsapi_key_here
GDELT_API_KEY=your_gdelt_key_here

# World Bank API (no key required for basic access)
WORLDBANK_API_URL=https://api.worldbank.org/v2

# ACLED API
ACLED_API_KEY=your_acled_key_here
ACLED_EMAIL=your_email_here

# Cache Settings
CACHE_TTL_MINUTES=15
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60

# ============================================
# AI & ADVANCED SEARCH INTEGRATIONS
# ============================================

# Perplexity AI
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_FINANCE_ENABLED=true
PERPLEXITY_SONAR_MODEL=sonar-reasoning-pro

# Tavily Search
TAVILY_API_KEY=your_tavily_api_key_here
TAVILY_SEARCH_DEPTH=advanced
TAVILY_MAX_RESULTS=10
TAVILY_INCLUDE_DOMAINS=
TAVILY_EXCLUDE_DOMAINS=

# Exa AI
EXA_API_KEY=your_exa_api_key_here
EXA_NUM_RESULTS=10
EXA_USE_AUTOPROMPT=true

# Firecrawl
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
FIRECRAWL_CRAWL_DEPTH=2
FIRECRAWL_ENABLE_JAVASCRIPT=true
FIRECRAWL_WAIT_FOR_SELECTOR=
